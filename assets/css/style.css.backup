/* Custom minimal style overrides with Catppuccin Macchiato theme */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

:root {
  /* Catppuccin Macchiato colors */
  --ctp-base: #24273a;
  --ctp-mantle: #1e2030;
  --ctp-crust: #181926;
  --ctp-text: #cad3f5;
  --ctp-subtext1: #b8c0e0;
  --ctp-subtext0: #a5adcb;
  --ctp-overlay2: #939ab7;
  --ctp-overlay1: #8087a2;
  --ctp-overlay0: #6e738d;
  --ctp-surface2: #5b6078;
  --ctp-surface1: #494d64;
  --ctp-surface0: #363a4f;

  /* Accent colors */
  --ctp-blue: #8aadf4;
  --ctp-lavender: #b7bdf8;
  --ctp-sapphire: #7dc4e4;
  --ctp-sky: #91d7e3;
  --ctp-teal: #8bd5ca;
  --ctp-green: #a6da95;
  --ctp-yellow: #eed49f;
  --ctp-peach: #f5a97f;
  --ctp-maroon: #ee99a0;
  --ctp-red: #ed8796;
  --ctp-mauve: #c6a0f6;
  --ctp-pink: #f5bde6;
  --ctp-flamingo: #f0c6c6;
  --ctp-rosewater: #f4dbd6;
}

body {
  font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: var(--ctp-text);
  background-color: var(--ctp-base);
}

.wrapper {
  max-width: 50rem;
  margin: 0 auto;
  padding: 1rem;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  margin-top: 1.5em;
  color: var(--ctp-text);
}

a {
  color: var(--ctp-blue);
  text-decoration: none;
}

a:hover {
  color: var(--ctp-lavender);
  text-decoration: underline;
}

a:visited {
  color: var(--ctp-mauve);
}

code {
  background-color: var(--ctp-mantle);
  color: var(--ctp-text);
  padding: 0.2em 0.4em;
  border-radius: 3px;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}

pre {
  background-color: var(--ctp-mantle);
  border: 1px solid var(--ctp-surface0);
  border-radius: 6px;
  padding: 1rem;
  overflow-x: auto;
}

pre code {
  background-color: transparent;
  padding: 0;
}

blockquote {
  border-left: 4px solid var(--ctp-blue);
  margin: 1rem 0;
  padding: 0.5rem 1rem;
  background-color: var(--ctp-mantle);
  color: var(--ctp-subtext1);
}

table {
  border-collapse: collapse;
  width: 100%;
  margin: 1rem 0;
}

th, td {
  border: 1px solid var(--ctp-surface0);
  padding: 0.5rem;
  text-align: left;
}

th {
  background-color: var(--ctp-mantle);
  font-weight: 700;
}

tr:nth-child(even) {
  background-color: var(--ctp-mantle);
}

.site-header {
  background-color: var(--ctp-crust);
  border-bottom: 1px solid var(--ctp-surface0);
}

.site-nav .page-link {
  color: var(--ctp-subtext1);
}

.site-nav .page-link:hover {
  color: var(--ctp-text);
}

.site-title {
  color: var(--ctp-text) !important;
}

.site-footer {
  border-top: 1px solid var(--ctp-surface0);
}

.footer-col {
  color: var(--ctp-subtext0);
}

.post-meta {
  color: var(--ctp-subtext0);
}

.post-title a {
  color: var(--ctp-text);
}

.post-title a:hover {
  color: var(--ctp-blue);
}

.post-list > li {
  border-bottom: 1px solid var(--ctp-surface0);
}

.highlight {
  background-color: var(--ctp-mantle) !important;
  color: var(--ctp-text) !important;
  border-radius: 6px;
  padding: 1rem;
  border: none !important;
}

.highlight pre {
  background-color: transparent !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.highlight code {
  background-color: transparent !important;
  color: var(--ctp-text) !important;
  border: none !important;
}

/* Syntax highlighting colors for better readability */
.highlight .c { color: var(--ctp-overlay1) !important; font-style: italic; }
.highlight .k { color: var(--ctp-mauve) !important; font-weight: bold; }
.highlight .o { color: var(--ctp-sky) !important; }
.highlight .n { color: var(--ctp-text) !important; }
.highlight .s { color: var(--ctp-green) !important; }
.highlight .nb { color: var(--ctp-red) !important; }
.highlight .nf { color: var(--ctp-blue) !important; }
.highlight .nc { color: var(--ctp-yellow) !important; }
.highlight .nn { color: var(--ctp-text) !important; }
.highlight .mi { color: var(--ctp-peach) !important; }
.highlight .mf { color: var(--ctp-peach) !important; }
.highlight .bp { color: var(--ctp-red) !important; }
.highlight .se { color: var(--ctp-peach) !important; }
.highlight .err { color: var(--ctp-red) !important; background-color: transparent !important; }

/* Override any default code styling */
.highlighter-rouge .highlight {
  background-color: var(--ctp-mantle) !important;
}

.language-plaintext {
  background-color: var(--ctp-mantle) !important;
  color: var(--ctp-text) !important;
}

/* Force override all code block styling */
div.highlight,
figure.highlight,
.highlighter-rouge,
.highlighter-rouge .highlight,
pre.highlight,
code.highlighter-rouge {
  background-color: var(--ctp-mantle) !important;
  color: var(--ctp-text) !important;
}

/* Target specific Rouge/Jekyll code blocks */
.language-shell .highlight,
.language-bash .highlight,
.language-text .highlight,
.language-plaintext .highlight {
  background-color: var(--ctp-mantle) !important;
  color: var(--ctp-text) !important;
}

/* Override any minima theme styles with maximum specificity */
.post-content .highlight,
.post-content .highlighter-rouge,
html body .highlight,
html body .highlighter-rouge .highlight,
html body main .highlight,
html body main .highlighter-rouge .highlight,
.language-plaintext.highlighter-rouge .highlight,
.language-plaintext.highlighter-rouge .highlight pre,
div.language-plaintext.highlighter-rouge div.highlight,
div.language-plaintext.highlighter-rouge div.highlight pre.highlight {
  background: var(--ctp-mantle) !important;
  background-color: var(--ctp-mantle) !important;
  color: var(--ctp-text) !important;
  border: none !important;
}

/* Remove borders from all code elements */
pre, code, .highlight pre, .highlight code {
  border: none !important;
}

/* Fix emphasis/note blocks styling */
em, strong, .post-content em, .post-content strong {
  color: var(--ctp-text);
}

/* Fix any remaining light backgrounds */
.post-content div,
.post-content p code,
.post-content li code {
  background-color: transparent;
}

/* Override inline styles for note boxes */
div[style*="background-color: #f9f9f9"],
div[style*="border: 1px solid #ccc"] {
  background-color: var(--ctp-mantle) !important;
  border: 1px solid var(--ctp-surface0) !important;
  color: var(--ctp-text) !important;
}
